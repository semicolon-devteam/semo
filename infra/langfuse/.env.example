# LangFuse Environment Variables
# 복사하여 .env로 사용: cp .env.example .env

# === 필수 ===
# NextAuth Secret (랜덤 문자열)
NEXTAUTH_SECRET=your-random-secret-here

# Salt (암호화용 랜덤 문자열)
SALT=your-random-salt-here

# === LiteLLM 연동 ===
# LangFuse에서 발급한 키 (Settings → API Keys)
LANGFUSE_PUBLIC_KEY=pk-lf-xxxxx
LANGFUSE_SECRET_KEY=sk-lf-xxxxx
LANGFUSE_HOST=http://localhost:3000

# === 선택: 이메일 알림 ===
# SMTP_CONNECTION_URL=smtp://user:password@smtp.example.com:587
# EMAIL_FROM_ADDRESS=langfuse@example.com
