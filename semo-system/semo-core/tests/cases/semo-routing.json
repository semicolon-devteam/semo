{
  "description": "SEMO Orchestrator 라우팅 테스트 (E2E)",
  "tests": [
    {
      "name": "자연어 → coder 라우팅",
      "input": "댓글 기능 구현해줘",
      "expect": {
        "contains_any": ["[SEMO] Orchestrator:", "[SEMO] Skill:"],
        "contains_any": ["coder", "implement", "구현"]
      }
    },
    {
      "name": "자연어 → planner 라우팅",
      "input": "댓글 기능 Epic 만들어줘",
      "expect": {
        "contains_any": ["[SEMO] Orchestrator:", "[SEMO] Skill:"],
        "contains_any": ["planner", "epic", "Epic"]
      }
    },
    {
      "name": "자연어 → tester 라우팅",
      "input": "이 함수 테스트 작성해줘",
      "expect": {
        "contains_any": ["[SEMO] Orchestrator:", "[SEMO] Skill:"],
        "contains_any": ["tester", "테스트"]
      }
    },
    {
      "name": "레거시 접두사 Deprecation 경고",
      "input": "[next] 댓글 기능 구현해줘",
      "expect": {
        "contains_any": ["Warning", "Deprecated", "제거 예정"]
      }
    },
    {
      "name": "SEMO 메시지 포맷 준수",
      "input": "API 엔드포인트 만들어줘",
      "expect": {
        "pattern": "\\[SEMO\\].*:",
        "not_contains": ["[SEMO]"]
      }
    }
  ]
}
